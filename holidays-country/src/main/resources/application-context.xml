    <hive-client-factory host="${hive.host}" port="${hive.port}" />
    <hive-runner id="hiveRunner" run-at-startup="true">
        <script>
            SELECT s07.description, s07.total_emp, s08.total_emp, s07.salary
            FROM
            sample_07 s07 JOIN
            sample_08 s08
            ON ( s07.code = s08.code )
            WHERE
            ( s07.total_emp > s08.total_emp
            AND s07.salary > 100000 )
            SORT BY s07.salary DESC
        </script>

    </hive-runner>

</beans:beans>